<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.setting.SettingActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#636363"
            android:elevation="4dp"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:titleTextColor="#E0E0E0"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#00A23939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="#CEA3A3"
                android:elevation="6dp" android:layout_marginTop="18dp"
                android:layout_marginHorizontal="12dp">
            <Switch
                    android:text="@string/layout_setting_switch_enables"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/switchEnables"
                    android:padding="10dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/layout_setting_switch_enables_description"
                    android:padding="10dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginHorizontal="12dp"
                android:layout_marginTop="18dp" android:background="#B4B4B4" android:elevation="6dp">
            <Switch
                    android:text="@string/layout_setting_switch_autostart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/switchRunOnBoot"
                    android:padding="10dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginHorizontal="12dp"
                android:layout_marginTop="18dp" android:background="#B4B4B4" android:elevation="6dp"
                android:paddingHorizontal="10dp" android:paddingBottom="10dp" android:paddingTop="4dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:layout_weight="1"
                        android:text="@string/layout_setting_observed_list_text"
                        android:gravity="center_vertical" android:textColor="#000000"/>
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_add_black_24"
                        android:id="@+id/buttonObservedAdd"
                        android:contentDescription="@string/layout_setting_observed_list_button_add_description"/>
            </LinearLayout>
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/listObserved"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>