<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.settings.top.SettingsTopActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:background="#636363"
            app:titleTextColor="#E0E0E0"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:id="@+id/backgroundEnable"
            android:layout_width="0dp"
            android:layout_height="74dp"

            android:background="#CEA3A3"

            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="12dp"

            app:layout_constraintTop_toBottomOf="@id/toolbarSettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Switch
            android:id="@+id/switchEnable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@string/layout_settings_switch_enable"
            android:padding="10dp"

            app:layout_constraintTop_toTopOf="@id/backgroundEnable"
            app:layout_constraintStart_toStartOf="@id/backgroundEnable"
            app:layout_constraintEnd_toEndOf="@id/backgroundEnable"/>
    <TextView
            android:id="@+id/textDescriptionEnable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:text="@string/layout_settings_switch_enables_description"
            android:padding="10dp"

            app:layout_constraintTop_toBottomOf="@id/switchEnable"
            app:layout_constraintStart_toStartOf="@id/switchEnable"
            app:layout_constraintEnd_toEndOf="@id/switchEnable"
            app:layout_constraintBottom_toBottomOf="@id/backgroundEnable"/>
    <View
            android:id="@+id/backgroundRunOnBoot"
            android:layout_width="0dp"
            android:layout_height="38dp"

            android:background="#B4B4B4"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="12dp"

            app:layout_constraintTop_toBottomOf="@id/backgroundEnable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Switch
            android:id="@+id/switchRunOnBoot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="@string/layout_settings_switch_run_on_boot"
            android:padding="10dp"

            app:layout_constraintTop_toTopOf="@id/backgroundRunOnBoot"
            app:layout_constraintStart_toStartOf="@id/backgroundRunOnBoot"
            app:layout_constraintEnd_toEndOf="@id/backgroundRunOnBoot"
            app:layout_constraintBottom_toBottomOf="@id/backgroundRunOnBoot"/>
    <View
            android:id="@+id/backgroundOpenChooser"
            android:layout_width="0dp"
            android:layout_height="38dp"

            android:background="#B4B4B4"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="12dp"

            app:layout_constraintTop_toBottomOf="@id/backgroundRunOnBoot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/textDirectories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:clickable="true"
            android:padding="10dp"
            android:textColor="#000000"
            android:text="@string/layout_settings_open_chooser"
            android:gravity="center_vertical"

            app:layout_constraintTop_toTopOf="@id/backgroundOpenChooser"
            app:layout_constraintStart_toStartOf="@id/backgroundOpenChooser"
            app:layout_constraintEnd_toStartOf="@id/imageDirectoriesArrow"
            app:layout_constraintBottom_toBottomOf="@id/backgroundOpenChooser"/>
    <ImageView
            android:id="@+id/imageDirectoriesArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:srcCompat="@drawable/baseline_chevron_right_24"
            android:clickable="true"
            android:padding="10dp"

            app:layout_constraintStart_toEndOf="@id/textDirectories"
            app:layout_constraintTop_toTopOf="@id/backgroundOpenChooser"
            app:layout_constraintEnd_toEndOf="@id/backgroundOpenChooser"
            app:layout_constraintBottom_toBottomOf="@id/backgroundOpenChooser"/>

</androidx.constraintlayout.widget.ConstraintLayout>