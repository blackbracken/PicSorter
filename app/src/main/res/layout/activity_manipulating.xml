<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   tools:context=".ui.manipulating.ManipulatingActivity"
                                                   android:padding="16dp">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageManipulated"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:adjustViewBounds="true" android:maxHeight="320dp"
            android:contentDescription="image"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="48dp" app:srcCompat="@drawable/baseline_delete_black_24"
            android:id="@+id/buttonTrash"
            android:backgroundTint="#CEA3A3"
            app:layout_constraintTop_toBottomOf="@+id/imageManipulated" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.218" android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline5"
            app:layout_constraintGuide_percent="0.3"/>
    <Button
            android:text="Apply"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/buttonApply" app:layout_constraintStart_toEndOf="@+id/buttonTrash"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/buttonTrash"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/textName" app:layout_constraintStart_toStartOf="@+id/buttonTrash"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            android:layout_marginTop="24dp" android:gravity="center|left" android:paddingLeft="8dp"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toStartOf="@+id/guideline"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/textName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="4dp"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/buttonTrash" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.75"/>
</androidx.constraintlayout.widget.ConstraintLayout>